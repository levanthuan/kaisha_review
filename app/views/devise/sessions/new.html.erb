<div class="login-form">
      <div class="top-login">
        <span><img src="/group.png" alt=""/></span>
      </div>
      <h1>Login</h1>
      <div class="login-top">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="login-ic">
        <i class="icon-user"></i>
            
            <%= f.email_field :email,value: 'Email',onfocus:"this.value = '';",onblur:"if (this.value == '') {this.value = 'Email';}"%>
            <div class="clear"> </div>
        </div>

        <div class="login-ic">
            <i class="icon"></i>
            <%= f.password_field :password, autocomplete: "off",value:"Password" ,onfocus:"this.value = '';", onblur:"if (this.value == '') {this.value = 'Password';}" %>
            <div class="clear"> </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %><br>
          <%= render "devise/shared/links" %>
      </div>
      <% end -%>

      <div class="log-bwn">
        <%= f.submit "Log in",class:'btn btn-primary btnt' %>
    </div>
    <% end %>
      </div>
      
</div>    